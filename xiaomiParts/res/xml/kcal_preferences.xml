<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xiaomi.parts.preferences.SecureSettingSwitchPreference
        android:defaultValue="false"
        android:key="kcal_enabled"
        android:title="@string/kcal_disabled"
        app:iconSpaceReserved="false"/>

    <com.xiaomi.parts.preferences.SecureSettingSwitchPreference
        android:defaultValue="false"
        android:dependency="kcal_enabled"
        android:key="kcal_grayscale"
        android:title="@string/kcal_grayscale"
        app:iconSpaceReserved="false"/>

    <PreferenceCategory
        android:key="cat_colormanagement"
        android:title="@string/cat_colormanagement"
        app:iconSpaceReserved="false">

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_color_red"
            android:max="255"
            android:title="@string/kcal_color_red"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_color_green"
            android:max="255"
            android:title="@string/kcal_color_green"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_color_blue"
            android:max="255"
            android:title="@string/kcal_color_blue"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="35"
            android:dependency="kcal_enabled"
            android:key="kcal_color_minimum"
            android:max="255"
            android:title="@string/kcal_color_minimum"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="cat_calibration"
        android:title="@string/cat_calibration"
        app:iconSpaceReserved="false">

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="35"
            android:dependency="kcal_enabled"
            android:key="kcal_saturation"
            android:max="158"
            android:title="@string/kcal_saturation"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="127"
            android:dependency="kcal_enabled"
            android:key="kcal_value"
            android:max="255"
            android:title="@string/kcal_value"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="127"
            android:dependency="kcal_enabled"
            android:key="kcal_contrast"
            android:max="255"
            android:title="@string/kcal_contrast"
            app:iconSpaceReserved="false"/>

        <com.xiaomi.parts.preferences.SecureSettingSeekBarPreference
            android:defaultValue="0"
            android:dependency="kcal_enabled"
            android:key="kcal_hue"
            android:max="1536"
            android:title="@string/kcal_hue"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
</PreferenceScreen>
